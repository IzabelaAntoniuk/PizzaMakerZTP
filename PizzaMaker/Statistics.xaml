<Window x:Class="PizzaMaker.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaMaker"
        mc:Ignorable="d"
        Title="Statistics" Height="300" Width="300" Background="SeaShell" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Width="200" Height="150" Name="wykres" Background="AntiqueWhite" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,10,10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Level1"></Label>
            <Label Content="Level2"></Label>
            <Label Content="Level3"></Label>
        </StackPanel>
        <Border Grid.Row="2" Width="100" Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,10" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Width="100" Height="30" Background="RosyBrown" Click="exit_Click">Zamknij</Button>
        </Border>
    </Grid>
</Window>
