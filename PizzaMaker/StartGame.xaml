<UserControl x:Class="PizzaMaker.StartGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzaMaker"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400" Background="SeaShell">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label FontWeight="ExtraBold" Content="Wybierz poziom trudności:" Width="300" Height="30"></Label>
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="easyLevel" IsChecked="True">
                    <Label Width="100" Height="30">Łatwy</Label>
                </RadioButton>
                <RadioButton x:Name="hardLevel">
                    <Label Width="100" Height="30">Trudny</Label>
                </RadioButton>

            </StackPanel>
            <Border Width="100" Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,10" HorizontalAlignment="Right">
                <Button Width="100" Height="30" Background="RosyBrown" Click="start_Click">Rozpocznij grę!</Button>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
