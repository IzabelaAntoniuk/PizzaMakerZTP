<UserControl x:Class="PizzaMaker.EndGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzaMaker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="SeaShell">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label FontWeight="ExtraBold" Content="Czy chcesz rozpocząć jeszcze raz?" Width="300" Height="30"></Label>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <Border Width="100" Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,10" HorizontalAlignment="Right">
                    <Button Width="100" Height="30" Background="RosyBrown" Click="Start_Click">Tak</Button>
                </Border>
                <Border Width="100" Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,0,10,10" HorizontalAlignment="Right">
                    <Button Width="100" Height="30" Background="RosyBrown" Click="Exit_Click">Wyjdź</Button>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
